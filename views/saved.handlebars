<h1> Saved articles</h1>

  {{#each articles}}
      <div class="card w-75">
          <div class="card-body">
            <p class="card-title"><strong>{{this.title}}</strong></p>
            <p class="card-text"><a href={{this.link}}>{{this.link}}</a></p>
            <button type="button" class="btn btn-primary data-Notes" data-id={{this._id}} data-toggle="modal" data-target="#exampleModalCenter">Article Notes</button>
            <p class="data-Delete" data-id={{this._id}}><a href="#" class="btn btn-primary">Delete Article</a></p>
          </div>
        </div>

  {{/each}}

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title exampleModalLongTitle">Notes for article:<span id="articleTitle"></span></h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="notes">
        
      </div>
       <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>