<h1> Saved articles</h1>

  {{#each articles}}
      <div class="card w-75">
          <div class="card-body">
            <p class="card-title"><strong>{{this.title}}</strong></p>
            <p class="card-text">{{this.summary}}</p>
            <p class="card-text"><a href={{this.link}}>{{this.link}}</a></p>
            <button type="button" class="btn btn-primary data-Notes" data-id={{this._id}} data-toggle="modal" data-target="#exampleModalCenter">Article Notes</button>
            <button type="button" class="btn btn-primary data-Delete" data-id={{this._id}}>Delete Article</button>
          </div>
        </div>

  {{/each}}

<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body" id="existingNotes">
<!-- add existing notes here -->

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="notes">
      </div>
       <div class="modal-footer">

      </div>
    </div>
  </div>
</div>